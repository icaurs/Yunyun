<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rv_item_white_bg"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="社群名称"
                        android:textColor="@color/dark"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:id="@+id/tvCommunityName" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="社群简介社群简介社群简介社群简介社群简介社群简介社群简介社群简介"
                        android:textColor="@color/gray"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:id="@+id/tvCommunityDetail" />
                </LinearLayout>

                <com.icarus.yunyun.view.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|right"
                    android:id="@+id/ivCommunity"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    app:border_color="@color/white"
                    app:border_width="0dp" />
            </FrameLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/transparent"></View>

            <com.icarus.yunyun.view.NestingListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="进入社群"
                android:id="@+id/btnJoin"
                android:background="@drawable/button_red_bg"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
