<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <corners android:radius="0dp" />

            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/white"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <corners android:radius="0dp" />

            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/white"
                android:type="linear" />
        </shape>
    </item>

</layer-list>