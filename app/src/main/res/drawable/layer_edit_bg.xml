<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="90"
                android:endColor="@color/google_color_red"
                android:startColor="@color/google_color_red"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape>
            <corners android:radius="2dp" />

            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/white"
                android:type="linear" />
        </shape>
    </item>

</layer-list>